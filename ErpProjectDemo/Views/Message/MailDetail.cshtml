@using EntityLayer.Concrete
@model List<Message>
@{
    ViewData["Title"] = "MailDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Mailbox</title>

    <link href="/admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="/admin/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="/admin/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="/admin/css/animate.css" rel="stylesheet">
    <link href="/admin/css/style.css" rel="stylesheet">

</head>

<body>

    <div id="wrapper">



        <div class="gray-bg">


            <div class="wrapper wrapper-content">
                <div class="row">
                    <div class="col-lg-3">
                        @await Html.PartialAsync("/Views/Message/MailBoxPartial.cshtml")
                    </div>
                    <div class="col-lg-9 animated fadeInRight">
                        @foreach (var item in Model)
                        {


                            <div class="mail-box-header">
                                <div class="float-right tooltip-demo">
                                    <a href="mail_compose.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Reply"><i class="fa fa-reply"></i> Yanıtla</a>
                                    <a href="#" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Print email"><i class="fa fa-print"></i> </a>
                                    <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Move to trash"><i class="fa fa-trash-o"></i> </a>
                                </div>
                                <h2>
                                    Mail Görüntüle
                                </h2>
                                <div class="mail-tools tooltip-demo m-t-md">

                                    <h3>
                                        <span class="font-normal">Konu: </span>@item.Subject
                                    </h3>
                                    <h5>
                                        <span class="float-right font-normal">@item.MessageDate</span>
                                        <span class="font-normal">Kimden: </span>@item.SenderMail
                                    </h5>
                                </div>
                            </div>
                            <div class="mail-box">


                                <div class="mail-body">

                                    <p>
                                        @item.MessageContent

                                    </p>
                                </div>

                                <div class="mail-body text-right tooltip-demo">
                                    <a class="btn btn-sm btn-white" href="mail_compose.html"><i class="fa fa-reply"></i> Yanıtla</a>
                                    <a class="btn btn-sm btn-white" href="mail_compose.html"><i class="fa fa-arrow-right"></i> İlet</a>
                                    <button title="" data-placement="top" data-toggle="tooltip" type="button" data-original-title="Print" class="btn btn-sm btn-white"><i class="fa fa-print"></i> Yazdır</button>
                                    <a href="/Message/DeleteMail/@item.Id" id="deletebtn"
                                                       onclick="return confirm('Silmek İstediğinize Emin Misiniz?');"  data-placement="top" data-toggle="tooltip" data-original-title="Trash" class="btn btn-sm btn-white"><i class="fa fa-trash-o"></i> Sil</a>
                                </div>
                                <div class="clearfix"></div>


                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="footer">
                <div class="float-right">
                    10GB of <strong>250GB</strong> Free.
                </div>
                <div>
                    <strong>Copyright</strong> Example Company &copy; 2014-2018
                </div>
            </div>

        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="/admin/js/jquery-3.1.1.min.js"></script>
    <script src="/admin/js/popper.min.js"></script>
    <script src="/admin/js/bootstrap.js"></script>
    <script src="/admin/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="/admin/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="/admin/js/inspinia.js"></script>
    <script src="/admin/js/plugins/pace/pace.min.js"></script>

    <!-- iCheck -->
    <script src="/admin/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });</script>
</body>

</html>

