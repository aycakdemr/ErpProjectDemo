@using EntityLayer.DTOs
@model List<TableSectionUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | E-commerce</title>

    <link href="/admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="/admin/font-awesome/css/font-awesome.css" rel="stylesheet">

    <!-- FooTable -->
    <link href="/admin/css/plugins/footable/footable.core.css" rel="stylesheet">

    <link href="/admin/css/animate.css" rel="stylesheet">
    <link href="/admin/css/style.css" rel="stylesheet">



</head>

<body>

    <div id="wrapper">

        <div class="gray-bg">

            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>Restoran Masaları</h2>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="index.html">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a>Table</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <strong>Index</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

            <div class="wrapper wrapper-content animated fadeInRight ecommerce">


                <div class="ibox-content m-b-sm border-bottom">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="col-form-label" for="product_name">Depo Adı</label>
                                <input type="text" id="product_name" name="product_name" value="" placeholder="Depo Adı" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label class="col-form-label" for="price">Sandalye Sayısı</label>
                                <input type="text" id="price" name="price" value="" placeholder="Sandalye Sayısı" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label class="col-form-label" for="quantity">Bölüm</label>
                                <input type="text" id="quantity" name="quantity" value="" placeholder="Bölüm" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="col-form-label" for="status">Durum</label>
                                <select name="status" id="status" class="form-control">
                                    <option value="1" selected>True</option>
                                    <option value="0">False</option>
                                </select>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox">
                            <div class="ibox-content">

                                <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                                    <thead>
                                        <tr>

                                            <th data-toggle="true">ID</th>
                                            <th data-hide="phone">Masa Numarası</th>
                                            <th data-hide="all">Sandalye Sayısı</th>
                                            <th data-hide="phone">Bölüm </th>
                                            <th data-hide="phone,tablet">Depo Adı</th>
                                            <th data-hide="phone">Düzenleyen Kullanıcı Adı</th>
                                            <th data-hide="phone">Durum</th>
                                            <th class="text-right" data-sort-ignore="true">İşlemler</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @item.TableId
                                                </td>
                                                <td>
                                                    @item.TableNumber
                                                </td>
                                                <td>
                                                    @item.NumberOfChair
                                                </td>
                                                <td>
                                                    @item.SectionName
                                                </td>
                                                <td>
                                                    @item.BranchName
                                                </td>
                                                <td>
                                                    @item.UserName
                                                </td>
                                                <td>
                                                    <span class="label label-primary">@item.Status</span>
                                                </td>
                                                <td class="text-right">
                                                    <div class="btn-group">
                                                        <button class="btn-white btn btn-xs">View</button>
                                                        <a href="/Table/UpdateTable/@item.TableId" class="btn-white btn btn-xs">Düzenle</a>
                                  
                                                    </div>
                                                </td>
                                            </tr>
                                        }



                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="6">
                                                <ul class="pagination float-right"></ul>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                                <a href="/Table/AddTable" class="btn  btn-warning">Yeni Masa Girişi</a>
                            </div>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>



    <!-- Mainly scripts -->
    <script src="/admin/js/jquery-3.1.1.min.js"></script>
    <script src="/admin/js/popper.min.js"></script>
    <script src="/admin/js/bootstrap.js"></script>
    <script src="/admin/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="/admin/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="/admin/js/inspinia.js"></script>
    <script src="/admin/js/plugins/pace/pace.min.js"></script>

    <!-- FooTable -->
    <script src="/admin/js/plugins/footable/footable.all.min.js"></script>

    <!-- Page-Level Scripts -->
    <script>
    $(document).ready(function () {

            $('.footable').footable();

        });</script>

</body>

</html>
